<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========== Varumärke Formulär ========== -->
    <record id="view_prima_brand_form" model="ir.ui.view">
        <field name="name">prima.brand.form</field>
        <field name="model">prima.brand</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Varumärkesnamn"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="supplier_id"/>
                        </group>
                        <group>
                            <field name="product_count"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="note" placeholder="Anteckningar om varumärket..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ========== Varumärke Lista ========== -->
    <record id="view_prima_brand_list" model="ir.ui.view">
        <field name="name">prima.brand.list</field>
        <field name="model">prima.brand</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
                <field name="code"/>
                <field name="supplier_id"/>
                <field name="product_count"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- ========== Action ========== -->
    <record id="action_prima_brand_list" model="ir.actions.act_window">
        <field name="name">Varumärken</field>
        <field name="res_model">prima.brand</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
