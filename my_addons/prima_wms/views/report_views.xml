<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========== Rapporter — Pivot/Graf på lagerrörelselogg ========== -->

    <!-- Pivot-vy för rapporter -->
    <record id="view_prima_log_pivot" model="ir.ui.view">
        <field name="name">prima.inventory.log.pivot</field>
        <field name="model">prima.inventory.log</field>
        <field name="arch" type="xml">
            <pivot string="WMS Rapporter" sample="1">
                <field name="product_id" type="row"/>
                <field name="move_type" type="col"/>
                <field name="quantity" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graf-vy -->
    <record id="view_prima_log_graph" model="ir.ui.view">
        <field name="name">prima.inventory.log.graph</field>
        <field name="model">prima.inventory.log</field>
        <field name="arch" type="xml">
            <graph string="WMS Rapporter" type="bar" sample="1">
                <field name="product_id"/>
                <field name="quantity" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action: Rapporter (pivot + graf + lista) -->
    <record id="action_prima_reports" model="ir.actions.act_window">
        <field name="name">Rapporter</field>
        <field name="res_model">prima.inventory.log</field>
        <field name="view_mode">pivot,graph,list</field>
        <field name="search_view_id" ref="view_prima_inventory_log_search"/>
        <field name="context">{'search_default_filter_week': 1}</field>
    </record>

    <!-- ========== Svinn-logg vyer ========== -->

    <record id="view_prima_waste_log_list" model="ir.ui.view">
        <field name="name">prima.waste.log.list</field>
        <field name="model">prima.waste.log</field>
        <field name="arch" type="xml">
            <list>
                <field name="create_date" string="Datum"/>
                <field name="product_id"/>
                <field name="product_sku" string="Art.nr"/>
                <field name="quantity"/>
                <field name="reason" widget="badge"
                       decoration-danger="reason == 'expired'"
                       decoration-warning="reason == 'damaged'"/>
                <field name="cost" string="Kostnad (kr)"/>
                <field name="note"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="scrap_id" string="Kassering"/>
            </list>
        </field>
    </record>

    <record id="view_prima_waste_log_form" model="ir.ui.view">
        <field name="name">prima.waste.log.form</field>
        <field name="model">prima.waste.log</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="reason"/>
                        </group>
                        <group>
                            <field name="cost"/>
                            <field name="scrap_id"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_prima_waste_log_search" model="ir.ui.view">
        <field name="name">prima.waste.log.search</field>
        <field name="model">prima.waste.log</field>
        <field name="arch" type="xml">
            <search>
                <field name="product_id"/>
                <field name="reason"/>
                <separator/>
                <filter name="filter_expired" string="Utgånget" domain="[('reason', '=', 'expired')]"/>
                <filter name="filter_damaged" string="Skadat" domain="[('reason', '=', 'damaged')]"/>
                <separator/>
                <group expand="0" string="Gruppera">
                    <filter name="group_reason" string="Orsak" context="{'group_by': 'reason'}"/>
                    <filter name="group_product" string="Produkt" context="{'group_by': 'product_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action: Svinnlogg -->
    <record id="action_prima_waste_log" model="ir.actions.act_window">
        <field name="name">Svinnlogg</field>
        <field name="res_model">prima.waste.log</field>
        <field name="view_mode">list,form,pivot</field>
        <field name="search_view_id" ref="view_prima_waste_log_search"/>
    </record>
</odoo>
